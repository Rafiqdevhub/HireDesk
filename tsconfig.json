{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "@app-types": ["./types"],
      "@app-types/*": ["./types/*"],
      "@app-types/components": ["./types/components"],
      "@app-types/index": ["./types/index"],
      "@public/*": ["./public/*"],
      "@components/*": ["./app/components/*"],
      "@routes/*": ["./app/routes/*"],
      "@utils/*": ["./app/utils/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@contexts/*": ["./app/contexts/*"],
      "@data/*": ["./app/data/*"],
      "@services/*": ["./app/services/*"],
      "@analysis/*": ["./app/components/analysis/*"],
      "@auth/*": ["./app/components/auth/*"],
      "@batch/*": ["./app/components/batch/*"],
      "@comparison/*": ["./app/components/comparison/*"],
      "@layout/*": ["./app/components/layout/*"],
      "@modals/*": ["./app/components/modals/*"],
      "@resume/*": ["./app/components/resume/*"],
      "@toast/*": ["./app/components/toast/*"],
      "@ui/*": ["./app/components/ui/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
