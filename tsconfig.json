{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "@components/*": ["./app/components/*"],
      "@routes/*": ["./app/routes/*"],
      "@utils/*": ["./app/utils/*"],
      "@lib/*": ["./app/lib/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@types/*": ["./app/types/*"],
      "@assets/*": ["./app/assets/*"],
      "@styles/*": ["./app/styles/*"],
      "@public/*": ["./public/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
